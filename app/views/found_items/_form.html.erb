<div class="custom-wrapper my-5">
  <div class="mb-4">
    <h1>Edit Found Item Report</h1>
    <%= link_to '← Back', root_path,
        class: "btn btn-link mb-5",
        style: "color: black; text-decoration: none;" %>
  </div>
  <% if current_user.nil? %>
    <h2>Oops, it seems like you need to log in first!</h2>
    <%= link_to "Log in", new_user_session_path, data: { "turbo-method": :get }, class: "btn btn-primary" %>
  <% else %>

    <%= simple_form_for found_item, html: { class: "custom-form simple_form new_found_item", multipart: true, data: { turbo: false } } do |f| %>

      <% if found_item.errors.any? %>
        <div class="alert alert-danger alert-smaller">
          <h4><%= pluralize(found_item.errors.count, "error") %> prohibited this report from being saved:</h4>
          <ul>
            <% found_item.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Deactivating and Reactivating Add more image button -->
      <%= render partial: "image_upload_section", locals: { f: f, found_item: found_item } %>

      <%= f.input :category, collection: ItemCategories::CATEGORIES, prompt: "Select a category",
        label_html: { class: "form-label" },
        input_html: { class: "form-select" },
        wrapper_html: { class: "mb-3" } %>

      <%= f.input :title,
        label_html: { class: "form-label" },
        input_html: { class: "form-control" },
        wrapper_html: { class: "mb-3" } %>

      <%= f.input :description,
        as: :text,
        label_html: { class: "form-label" },
        input_html: {
          class: "form-control description-field",
          style: "height: 150px; min-height: 150px;",
          rows: 4
        },
        wrapper_html: { class: "mb-3" } %>

      <div data-controller="address-autocomplete" data-address-autocomplete-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        <%= f.label :location, class: "form-label" %>
        <div data-address-autocomplete-target="search" class="mb-2"></div>
        <%= f.input :location, label: false,
          input_html: {
            type: "hidden",
            data: { address_autocomplete_target: "address" },
            class: "form-control",
            style: "height: 49px; min-height: 49px;"
          },
          wrapper_html: { class: "mb-3" } %>
      </div>

      <%= f.input :date_reported, as: :date, 
        label_html: { class: "form-label" },
        input_html: { class: "form-select d-inline-block w-auto me-2" },
        wrapper_html: { class: "mb-3" } %>

      <div class="d-flex gap-2 mt-3 mb-3">
        <%= f.button :submit, found_item.persisted? ? "Update found item" : "Report Found Item", class: "custom-action-btn" %>

        <% if found_item.persisted? %>
          <%= button_to "Delete report",
                      found_item_path(found_item),
                      method: :delete,
                      data: { turbo_confirm: "Are you sure?" },
                      class: "custom-outline-btn",
                      style: "text-decoration: none; display: inline-block; text-align: center;" %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
