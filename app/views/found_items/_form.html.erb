<div class="custom-wrapper my-5">
  <h1>Edit Found Item Report</h1>
  <%= link_to '← Back', root_path,
      class: "btn btn-link mb-5",
      style: "color: black; text-decoration: none;" %>
  <% if current_user.nil? %>
    <h2>Oops, it seems like you need to log in first!</h2>
    <%= link_to "Log in", new_user_session_path, data: { "turbo-method": :get }, class: "btn btn-primary" %>
  <% else %>
    <%= simple_form_for found_item, html: { multipart: true } do |f| %>
      <% if found_item.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(found_item.errors.count, "error") %> prohibited this report from being saved:</h4>
          <ul>
            <% found_item.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div data-controller="add-image">
        <div id="image-fields" data-add-image-target="container">
          <%= f.file_field :images, multiple: false, name: "found_item[images][]", class: "form-control mb-2" %>
        </div>
        <button type="button"
                class="btn btn-primary mb-4"
                data-action="click->add-image#addField">
          Add Another Image
        </button>
      </div>
      <%= f.input :category, collection: ItemCategories::CATEGORIES, prompt: "Select a category" %>
      <%= f.input :title %>
      <%= f.input :description %>

      <div data-controller="address-autocomplete" data-address-autocomplete-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        <%= f.label :location %>
        <div data-address-autocomplete-target="search"></div>
        <%= f.input :location, label: false,
          input_html: { data: { address_autocomplete_target: "address" },
          style: "display:none;" } %>
      </div>
      <%= f.input :date_reported, as: :date %>
      <div>
      <%= f.button :submit, found_item.persisted? ? "Update Found Item" : "Report Found Item", class: "custom-action-btn mt-3" %>
      </div>
    <% end %>
    <% if found_item.images.attached? %>
      <div class="mb-3">
        <h5>Uploaded images:</h5>
        <ul class="list-unstyled">
          <% found_item.images.each do |image| %>
            <li class="d-flex justify-content-between align-items-center mb-2 p-2 border rounded">
              <span class="me-3"><%= image.filename.to_s %></span>

              <%= button_to delete_image_found_item_path(found_item, image_id: image.id),
                            method: :delete,
                            data: { turbo_confirm: "Are you sure you want to delete this image?" },
                            class: "btn btn-outline-danger btn-sm m-0" do %>
                <i class="bi bi-trash"></i>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>
</div>
