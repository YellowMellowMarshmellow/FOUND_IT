<h1>All Found Items</h1>

<% if @found_items.empty? %>
  <p>No found items have been reported yet.</p>
<% else %>
  <% @found_items.each do |item| %>
    <div class="found-item" style="border: 1px solid #ddd; padding: 12px; margin-bottom: 16px;">
      <h3><%= item.title %></h3>
      <p><strong>Description:</strong> <%= item.description %></p>
      <p><strong>Location:</strong> <%= item.location %></p>
      <p><strong>Date Reported:</strong> <%= item.date_reported.strftime('%B %d, %Y') %></p>

      <% if user_signed_in? && item.user == current_user %>
        <p style="color: blue;">This is your item.</p>
        <%= link_to "Edit", edit_found_item_path(item), class: "btn btn-sm btn-secondary" %>
      <% end %>
    </div>
  <% end %>
<% end %>
