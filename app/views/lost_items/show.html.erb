<h1><%= @lost_item.title %></h1>

<p><strong>Description:</strong> <%= @lost_item.description %></p>
<p><strong>Category:</strong> <%= @lost_item.category %></p>
<p><strong>Location:</strong> <%= @lost_item.location %></p>
<p><strong>Date Lost:</strong> <%= @lost_item.date_lost.strftime("%B %d, %Y") if @lost_item.date_lost %></p>

<% if @lost_item.images.attached? %>
  <div>
    <strong>Images:</strong><br>
    <% @lost_item.images.each do |image| %>
      <%= image_tag image, style: "max-width: 300px; height: auto;" %>
    <% end %>
  </div>
<% end %>

<% if @lost_item.user == current_user %>
  <%= link_to "Edit", edit_lost_item_path(@lost_item), class: "btn" %>
<% end %>

<% if @lost_item.user == current_user %>
  <%= link_to "Delete Lost Item", lost_item_path(@lost_item),
              method: :delete,
              data: { confirm: "Are you sure you want to delete this lost item?" },
              class: "btn" %>
<% end %>

<%= link_to "Back", lost_items_path, class: "btn" %>
