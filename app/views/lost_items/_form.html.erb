<div class="mx-5 p-4">
  <h1><%= lost_item.persisted? ? "Edit Lost Item" : "Create a Lost Item Report" %></h1>
</div>

<div class="mx-5 p-4 my-3">
  <% if current_user.nil? %>
    <h2>Oops, it seems like you need to log in first!</h2>
    <%= link_to "Log in", new_user_session_path, class: "btn btn-primary" %>
  <% else %>
    <% if lost_item.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(lost_item.errors.count, "error") %> prohibited this report from being saved:</h4>
        <ul>
          <% lost_item.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= simple_form_for lost_item, html: { multipart: true } do |f| %>
      <%= f.input :title %>
      <%= f.input :category, collection: ItemCategories::CATEGORIES, prompt: "Select a category" %>
      <%= f.input :description, error: "must be at least 30 characters long" %>

      <div data-controller="address-autocomplete" data-address-autocomplete-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        <%= f.label :location %>
        <div data-address-autocomplete-target="search"></div>
        <%= f.input :location, label: false,
              input_html: { data: { address_autocomplete_target: "address" },
              style: "display:none;" } %>
      </div>

      <%= f.input :date_lost, as: :date %>


      <div id="image-fields">
        <%= f.file_field :images, multiple: false, name: "lost_item[images][]", class: "form-control mb-2" %>
      </div>
      <button type="button" id="add-image-field" class="btn btn-secondary mb-4">Add Another Image</button>

      <%= f.button :submit, lost_item.persisted? ? "Update Lost Item" : "Report Lost Item", class: "btn btn-primary mt-3" %>

    <% end %>
    <% if lost_item.images.attached? %>
      <div class="mb-3">
        <h5>Uploaded images:</h5>
        <ul class="list-unstyled">
          <% lost_item.images.each do |image| %>
            <li class="d-flex justify-content-between align-items-center mb-2 p-2 border rounded">
              <span class="me-3"><%= image.filename.to_s %></span>
              <%= link_to '<i class="bi bi-trash"></i>'.html_safe, delete_image_lost_item_path(lost_item, image_id: image.id),
                method: :delete,
                data: { turbo_confirm: "Are you sure?" },
                class: "btn btn-outline-danger btn-sm" %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const addButton = document.getElementById("add-image-field");
    const container = document.getElementById("image-fields");

    if (addButton && container) {
      addButton.addEventListener("click", () => {
        const existingInputs = container.querySelectorAll("input[type='file']");
        if (existingInputs.length < 3) {
          const newInput = document.createElement("input");
          newInput.type = "file";
          newInput.name = "lost_item[images][]";
          newInput.className = "form-control mb-2";
          container.appendChild(newInput);
        } else {
          alert("You can only upload up to 3 images.");
        }
      });
    }
  });
</script>
